<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Responsive Admin Dashboard Template">
    <meta name="keywords" content="admin,dashboard">
    <meta name="author" content="stacks">

    <title>Admin Panel | Maganizer</title>

    <link href="~/css/css.css" rel="stylesheet">
    <link href="~/css/icon.css" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/all.min.css" rel="stylesheet">
    <link href="~/css/toastr.min.css" rel="stylesheet">

    <link href="~/css/lime.min.css" rel="stylesheet">
    <link href="~/css/custom.css" rel="stylesheet">
    <link rel="icon" href="~/images/cropped-01-progress-32x32.gif" sizes="32x32">
    <link rel="icon" href="~/images/cropped-01-progress-192x192.gif" sizes="192x192">
</head>
<body>
<div class="loader">
    <div class="spinner-grow text-primary" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>
<div class="modal fade" id="themes-info" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">New Themes!</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="material-icons">close</i>
                </button>
            </div>
            <div class="modal-body">
                Check out other nice themes by clicking <i class="material-icons" style="font-size: 18px; vertical-align: middle; margin: 0 5px;">layers</i> button at the top right corner of the screen.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<div class="lime-sidebar">
    <div class="lime-sidebar-inner slimscroll">
        <ul class="accordion-menu">
            <li class="sidebar-title">
                Apps
            </li>
            @if (ViewData["Active"].ToString() == "Index")
            {
                <li>
                    <a asp-controller="Admin" asp-action="Index" class="active"><i class="material-icons">dashboard</i>Main page</a>
                </li>

                <li>
                    <a asp-controller="Admin" asp-action="MessagesFromUsers"><i class="material-icons">email</i>Messages From Users</a>
                </li>
            }

            @if (ViewData["Active"].ToString() == "Messages")
            {
                <li>
                    <a asp-controller="Admin" asp-action="Index"><i class="material-icons">dashboard</i>Main page</a>
                </li>

                <li>
                    <a asp-controller="Admin" asp-action="MessagesFromUsers" class="active"><i class="material-icons">email</i>Messages From Users</a>
                </li>
            }
            <li>
                <a asp-controller="Home" asp-action="Index"><i class="material-icons">home</i>Return To Site</a>
            </li>
        </ul>
    </div>
</div>


<div class="lime-header">
    <nav class="navbar navbar-expand-lg">
        <section class="material-design-hamburger navigation-toggle">
            <a href="javascript:void(0)" class="button-collapse material-design-hamburger__icon">
                <span class="material-design-hamburger__layer"></span>
            </a>
        </section>
        <a class="navbar-brand" href="#">Lime</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <i class="material-icons">keyboard_arrow_down</i>
        </button>


        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <form class="form-inline my-2 my-lg-0 search" id="search">
                <input id="elastic" class="form-control mr-sm-2" type="search" placeholder="Search for users" aria-label="Search">
            </form>
        </div>
    </nav>
</div>


<div class="lime-container">
    <div class="lime-body">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

    </div>
    <div class="lime-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/jquery-3.1.0.min.js"></script>
<script src="~/js/popper.min.js"></script>
<script src="~/js/bootstrap.min.js"></script>
<script src="~/js/jquery.slimscroll.min.js"></script>
<script src="~/js/chart.min.js"></script>
<script src="~/js/apexcharts.min.js"></script>
<script src="~/js/toastr.min.js"></script>
<script src="~/js/lime.min.js"></script>
<script src="~/js/dashboard.js"></script>
<script>
    document.querySelector('#elastic').oninput = function () {
      let val = this.value.trim();
      let elasticItems = document.querySelectorAll('.elastic tr');
      if (val != '') {
        elasticItems.forEach(function (elem) {
          if (elem.innerText.search(val) == -1) {
            elem.classList.add('hide');
           
          }
          else {
            elem.classList.remove('hide');
            
          }
        });
      }
      else {
        elasticItems.forEach(function (elem) {
          elem.classList.remove('hide');
        });
      }

    }

   
  </script>
<style>
    .elastic tr.hide{
      display: none;
    }
   
  </style>

</body>
</html>