@model Habbitica.Models.UserProfileViewModel
@using Habbitica.BLL_DAL.Entity
@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager

@{
    Layout = "_Layout";
    @if (Model.Username == User.Identity.Name)
    {
        ViewData["Title"] = "My profile | Habbitica";
    }
    else
    {
        ViewData["Title"] = $"{@Model.Username} • user info | Habbitica";
    }
}

<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" type="text/css" href="~/css/userProfile.css">
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css">
</head>

<body>
<div class="container">
    <div class="row gutters">
        <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
            <div class="card h-100">
                <div class="card-body">
                    <div class="account-settings">
                        <div class="user-profile">
                            <div class="user-avatar">
                                @if (Model.Avatar == null)
                                {
                                    <img src="/images/avatar7.png">
                                }
                                else
                                {
                                    <img src="data:image/jpeg; base64, @(Convert.ToBase64String(Model.Avatar))">
                                }

                            </div>
                            <h5 class="user-name">@Model.Username</h5>
                        </div>
                        <div class="about">
                            <h5>About</h5>
                            @if (Model.About == null)
                            {
                                <p>This user hasn't set the information about himself yet</p>
                            }
                            else
                            {
                                <p>@Model.About</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
            <div class="card h-100">
                <div class="card-body">
                    <div class="row gutters">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <h6 class="mb-2 text-primary">Personal Details</h6>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <h6>
                                    <label for="fullName">Full Name</label>
                                </h6>
                                @if (Model.FullName == " ")
                                {
                                    <h7 class="user-name">This user hasn't set his full name yet</h7>
                                }
                                else
                                {
                                    <h7 class="user-name">• @Model.FullName</h7>
                                }
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <h6>
                                    <label for="phone">Email for contacts</label>
                                </h6>
                                @if (Model.EmailForContacts == null)
                                {
                                    <h7 class="user-name">This user hasn't set his email for contacts yet</h7>
                                }
                                else
                                {
                                    <h7 class="user-name">• @Model.EmailForContacts</h7>
                                }

                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <h6>
                                    <label for="website">Website URL, where you can find me</label>
                                </h6>
                                @if (Model.WebSiteUrl == null)
                                {
                                    <h7 class="user-name">This user hasn't set Facebook yet</h7>
                                }
                                else
                                {
                                    <h7 class="user-name">• <a href="@Model.WebSiteUrl">WebSite</a></h7>
                                }

                            </div>
                        </div>
                    </div>
                    <div class="row gutters">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <h5 class="mt-3 mb-2 text-primary">Address</h5>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <h6>
                                    <label for="ciTy">City</label>
                                </h6>
                                @if (Model.City == null)
                                {
                                    <h7 class="user-name">This user hasn't set his living city yet</h7>
                                }
                                else
                                {
                                    <h7 class="user-name">• @Model.City</h7>
                                }

                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <h6>
                                    <label for="country">Country</label>
                                </h6>
                                @if (Model.Country == null)
                                {
                                    <h7 class="user-name">This user hasn't set his country yet</h7>
                                }
                                else
                                {
                                    <h7 class="user-name">• @Model.Country</h7>
                                }

                            </div>
                        </div>
                    </div>

                    @if (User.Identity.Name == Model.Username)
                    {
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="text-right">
                                    <a asp-controller="UserProfile" asp-action="EditProfile">
                                        <button type="button" id="submit" name="submit"
                                                class="btn btn-warning">
                                            Edit
                                        </button>
                                    </a>

                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
</body>

</html>